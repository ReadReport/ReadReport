            android:value="55c1a323e0f55a2d860017f5"/>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="test"/>

        <activity
            android:name=".business.splash.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".business.home.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppHome">
        </activity>

        <activity
            android:name=".base.activity.StandardActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".business.read.activity.ReportListActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".business.read.activity.ReadReportActivity"
            android:screenOrientation="portrait">
