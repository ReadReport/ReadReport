<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hei_000000">

    <ImageView
        android:id="@+id/fragment_camera_preview_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="78dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="bottom"
        android:background="@color/hei_1e1e1e">

        <TextView
            android:id="@+id/fragment_camera_preview_recapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="@string/picture_choose_recapture"
            android:textColor="@color/bai_ffffff"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/fragment_camera_preview_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="@string/picture_choose_use"
            android:textColor="@color/bai_ffffff"
            android:textSize="15sp"/>

    </FrameLayout>

</FrameLayout>

