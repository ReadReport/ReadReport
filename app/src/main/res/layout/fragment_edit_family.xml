            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/edit_family_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:textColor="@color/hui_575757"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/edit_family_sex_title"
            app:layout_constraintRight_toLeftOf="@+id/edit_family_sex_more"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/edit_family_sex_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/login_more_pressed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

    <!--关系-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_family_relationship_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
