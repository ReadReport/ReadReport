            android:src="@drawable/ic_add_relationship"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/edit_family_relationship_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/edit_family_relationship"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/edit_family_relationship_icon"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/edit_family_relationship"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:textColor="@color/hui_575757"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/edit_family_relationship_title"
            app:layout_constraintRight_toLeftOf="@+id/edit_family_relationship_more"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/edit_family_relationship_more"
