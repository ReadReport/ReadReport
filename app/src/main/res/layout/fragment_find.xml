<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hui_e9ebed"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- 日常检测 -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/shape_white_corner"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/home_find_daily_detect_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_find_detection"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/home_find_daily_detect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/home_find_daily_detect"
                android:textColor="@color/hei_333333"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/home_find_daily_detect_icon"
                app:layout_constraintLeft_toRightOf="@id/home_find_daily_detect_icon"
                app:layout_constraintTop_toTopOf="@id/home_find_daily_detect_icon"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/home_find_daily_detect_title"
                />

            <com.wy.report.widget.indicator.CircleNavigator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:color="@color/lan_c7e9ff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_pager"
                app:space="4.5dp"
                app:stroke_width="5.5dp"/>

        </android.support.constraint.ConstraintLayout>

        <!-- 健康测试 -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_corner">

            <ImageView
                android:id="@+id/home_find_health_test_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_find_test"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/home_find_health_test_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/home_find_health_test"
                android:textColor="@color/hei_333333"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/home_find_health_test_icon"
                app:layout_constraintLeft_toRightOf="@id/home_find_health_test_icon"
                app:layout_constraintTop_toTopOf="@id/home_find_health_test_icon"/>

        </android.support.constraint.ConstraintLayout>

        <!-- 健康知识 -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_corner">

            <ImageView
                android:id="@+id/home_find_health_knowledge_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_find_health"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/home_find_health_knowledge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/home_find_health_knowledge"
                android:textColor="@color/hei_333333"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/home_find_health_knowledge_icon"
                app:layout_constraintLeft_toRightOf="@id/home_find_health_knowledge_icon"
                app:layout_constraintTop_toTopOf="@id/home_find_health_knowledge_icon"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>
