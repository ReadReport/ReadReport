<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hui_e9ebed">

            <ImageView
                android:id="@+id/home_top_bg"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@android:color/holo_blue_bright"
                android:scaleType="matrix"/>

            <LinearLayout
                android:id="@+id/home_use_report_num_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="50dp">

                <TextView
                    android:id="@+id/home_use_report_num_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_use_report_num_pre"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/home_use_report_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/home_use_report_num_suf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_use_report_num_suf"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_use_report_num_ll"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/home_use_report_tip"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                />


            <!-- 查询报告, 上传报告, 管理报告 -->
            <LinearLayout
                android:id="@+id/home_report_operation"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="235dp"
                android:background="@drawable/shape_white_corner"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_inquire_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/home_inquire_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_query_report"
                        android:textColor="@color/hei_333333"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_upload_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/home_upload_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_upload_report"
                        android:textColor="@color/hei_333333"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_manage_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/home_management_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_manage_report"
                        android:textColor="@color/hei_333333"/>
                </LinearLayout>
            </LinearLayout>


            <!-- 体检预约, 自我解读-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/home_report_operation"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white_corner">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white_corner">

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
