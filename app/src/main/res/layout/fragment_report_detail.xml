<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.wy.report.widget.ObservableScrollView
        android:id="@+id/report_detail_sv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/report_detail_bottom"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <!--用户信息-->
            <include layout="@layout/view_report_detail_user_info" />
            <!--体检报告-->
            <include layout="@layout/view_report_detail_report_pic_info" />
            <!--用户备注-->
            <include layout="@layout/view_report_detail_user_note" />
            <!--健康得分-->
            <include layout="@layout/view_report_detail_score" />
            <!--身体机能-->
            <include layout="@layout/view_report_detail_body_info" />
            <!--医生建议-->
            <include layout="@layout/view_report_detail_doctor_suggest" />

        </LinearLayout>
    </com.wy.report.widget.ObservableScrollView>

    <!--上传给医生-->
    <TextView
        android:id="@+id/report_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_blue_fill"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/report_detail_bottom_btn_readed"
        android:textColor="@color/bai_ffffff"
        android:textSize="15sp" />
</android.support.constraint.ConstraintLayout>
