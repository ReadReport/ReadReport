<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_query_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_f9f9f9"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/report_query_info_container"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_white_corner"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--体检人员-->
        <LinearLayout
            android:id="@+id/report_query_medical_examiner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_white_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/report_query_medical_examiner_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/upload_name"/>

            <TextView
                android:id="@+id/report_query_medical_examiner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/report_medical_examiner"
                android:textColor="@color/hei_333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/report_query_medical_examiner_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:hint="@string/report_empty_tip_member"
                android:singleLine="true"
                android:textColor="@color/hei_575757"
                android:textColorHint="@color/hui_ababab"
                android:textSize="14sp"
                tools:text="姓名"/>

            <ImageView
                android:id="@+id/report_query_medical_examiner_more"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/home_more"/>

        </LinearLayout>

        <!--体检医院-->
        <LinearLayout
            android:id="@+id/report_query_hospital"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_white_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/report_query_hospital_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/upload_hospital"/>

            <TextView
                android:id="@+id/report_query_hospital_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/report_examine_hospital"
                android:textColor="@color/hei_333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/report_query_hospital_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:hint="@string/report_empty_tip_hospital"
                android:singleLine="true"
                android:textColor="@color/hei_575757"
                android:textColorHint="@color/hui_ababab"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/report_query_account_more"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/home_more"/>
        </LinearLayout>

        <!--账号-->
        <LinearLayout
            android:id="@+id/report_query_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_white_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/report_query_account_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/online_accountnumber"/>

            <TextView
                android:id="@+id/report_query_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/report_account"
                android:textColor="@color/hei_333333"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/report_query_account_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="@string/report_account_hint"
                android:singleLine="true"
                android:textColor="@color/hei_575757"
                android:textColorHint="@color/hui_ababab"
                android:textSize="14sp"
                android:textCursorDrawable="@null"/>
        </LinearLayout>

        <!--密码-->
        <LinearLayout
            android:id="@+id/report_query_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_white_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/report_query_password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/online_password"/>

            <TextView
                android:id="@+id/report_query_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/report_password"
                android:textColor="@color/hei_333333"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/report_query_password_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:hint="@string/report_password_hint"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/hei_575757"
                android:textColorHint="@color/hui_ababab"
                android:textCursorDrawable="@null"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/report_query_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/report_not_found"
        android:textColor="@color/lan_30acff"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_query_info_container"/>

    <TextView
        android:id="@+id/report_query_submit"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/selector_btn_blue_corner_25_fill"
        android:gravity="center"
        android:text="@string/report_submit_info"
        android:textColor="@color/bai_ffffff"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_query_not_found"
        />

    <TextView
        android:id="@+id/report_query_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/report_tips"
        android:textColor="@color/hong_f54f52"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_query_submit"
        />

</android.support.constraint.ConstraintLayout>

