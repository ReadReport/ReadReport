<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:focusable="true"
             android:focusableInTouchMode="true"
             android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@color/hui_f9f9f9"
        android:fillViewport="true"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_white_corner"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/report_upload_medical_examiner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_white_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/report_upload_medical_examiner_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/upload_name"/>

                    <TextView
                        android:id="@+id/report_upload_medical_examiner_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/report_medical_examiner"
                        android:textColor="@color/hei_333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/report_upload_medical_examiner_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:hint="@string/report_medical_examiner_hint"
                        android:singleLine="true"
                        android:textColor="@color/hei_575757"
                        android:textColorHint="@color/hui_ababab"
                        android:textSize="14sp"
                        tools:text="姓名"/>

                    <ImageView
                        android:id="@+id/report_upload_medical_examiner_more"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/home_more"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/report_upload_examine_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_white_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/report_upload_examine_time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/upload_date"/>

                    <TextView
                        android:id="@+id/report_upload_examine_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/report_examine_time"
                        android:textColor="@color/hei_333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/report_upload_examine_time_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:hint="@string/report_examine_time_hint"
                        android:singleLine="true"
                        android:textColor="@color/hei_575757"
                        android:textColorHint="@color/hui_ababab"
                        android:textSize="14sp"
                        tools:text="时间"/>

                    <ImageView
                        android:id="@+id/report_upload_examine_time_more"
                        android:layout_width="20dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/home_more"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/report_upload_examine_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_white_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/report_upload_examine_hospital_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/upload_hospital"/>

                    <TextView
                        android:id="@+id/report_upload_examine_hospital_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/report_examine_hospital"
                        android:textColor="@color/hei_333333"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/report_upload_examine_hospital_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:hint="@string/report_examine_hospital_hint"
                        android:includeFontPadding="false"
                        android:maxLength="25"
                        android:singleLine="true"
                        android:textColor="@color/hei_575757"
                        android:textColorHint="@color/hui_ababab"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp"/>

                </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/report_upload_remark_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/upload_remarks"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/report_upload_remark_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="@string/report_remark"
                        android:textColor="@color/hei_333333"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/report_upload_remark_icon"
                        app:layout_constraintLeft_toRightOf="@+id/report_upload_remark_icon"
                        app:layout_constraintTop_toTopOf="@+id/report_upload_remark_icon"/>

                    <EditText
                        android:id="@+id/report_upload_remark_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@null"
                        android:gravity="top|left"
                        android:hint="@string/report_remark_hint"
                        android:maxLines="3"
                        android:minHeight="50dp"
                        android:paddingTop="2.5dp"
                        android:textColor="@color/hei_575757"
                        android:textColorHint="@color/hui_ababab"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toRightOf="@+id/report_upload_remark_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/report_upload_remark_title"/>

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/report_upload_remark_name_len"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:textColor="@color/hui_ababab"
                    tools:text="100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_white_corner"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/report_upload_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/report_image"
                        android:textColor="@color/hei_333333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/report_upload_image_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/report_picture_num"
                        android:textColor="@color/hei_333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/report_image_hint"
                        android:textSize="11sp"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/upload_report"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/lan_30acff"
        android:gravity="center"
        android:text="@string/report_submit"
        android:textColor="@color/bai_ffffff"
        android:textSize="16sp"/>
</FrameLayout>