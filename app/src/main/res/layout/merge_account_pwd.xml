<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.wy.report.widget.view.SuperEditText
        android:id="@+id/account"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:textColor="@color/hei_333333"
        android:textSize="17sp"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="@string/phone_hint"
        app:deleteMode="true"
        app:ic_left="@drawable/ic_modify_phone"
        app:ic_right="@drawable/btn_delete_normal"
        android:textColorHint="@color/hui_d0d0d0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:left_height="15"
        app:left_width="15"
        app:left_x="0"
        app:left_y="0"
        app:linePosition="1"
        app:right_height="15"
        app:right_width="15"
        app:right_x="0"
        app:right_y="0"
        />

    <com.wy.report.widget.view.SuperEditText
        android:id="@+id/verify_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="15dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/hei_333333"
        android:textColorHint="@color/hui_d0d0d0"
        android:textSize="17sp"
        android:hint="@string/verify_code_hint"
        app:ic_left="@drawable/ic_modify_verificationcode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/get_verify_code"
        app:layout_constraintTop_toBottomOf="@+id/account"
        app:left_height="15"
        app:left_width="15"
        app:left_x="0"
        app:left_y="0"
        app:linePosition="1"
        app:right_height="15"
        app:right_width="15"
        app:right_x="0"
        app:right_y="0"
        />


    <com.wy.report.widget.view.CountDownTextView
        android:id="@+id/get_verify_code"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_blue_corner_5"
        android:gravity="center"
        android:text="@string/my_verify_code_get_code"
        android:textColor="@color/lan_30acff"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/verify_code"
        app:layout_constraintLeft_toRightOf="@+id/verify_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/verify_code"
        />

    <com.wy.report.widget.view.SuperEditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="15dp"
        android:textColor="@color/hei_333333"
        android:textSize="17sp"
        android:hint="@string/password_hint"
        android:maxLines="1"
        android:textColorHint="@color/hui_d0d0d0"
        android:singleLine="true"
        app:ic_left="@drawable/ic_modify_password"
        app:ic_pwd_dis="@drawable/btn_password_close"
        app:ic_pwd_show="@drawable/btn_password_open"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_code"
        app:left_height="15"
        app:left_width="15"
        app:left_x="0"
        app:left_y="0"
        app:linePosition="1"
        app:pwdMode="true"
        app:right_height="15"
        app:right_width="15"
        app:right_x="0"
        app:right_y="0"
        />

</merge>