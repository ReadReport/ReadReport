<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bottom_wrapper"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/bai_ffffff"
        android:text="@string/message_delete"
        android:textColor="@color/lan_24aaff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vh_daily_detect_data_list_item_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/hui_575757"
            android:textSize="14sp"
            tools:text="124/86"/>

        <TextView
            android:id="@+id/vh_daily_detect_data_list_item_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/hui_575757"
            android:textSize="14sp"
            tools:text="血压偏高"/>

        <TextView
            android:id="@+id/vh_daily_detect_data_list_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/hui_575757"
            android:textSize="14sp"
            tools:text="2017-11-11"/>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>