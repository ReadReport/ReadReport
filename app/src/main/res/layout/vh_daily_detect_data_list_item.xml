<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/vh_daily_detect_data_list_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/vh_daily_detect_data_list_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hui_575757"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vh_daily_detect_data_list_item_state"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="124/86"/>

    <TextView
        android:id="@+id/vh_daily_detect_data_list_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hui_575757"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vh_daily_detect_data_list_item_value"
        app:layout_constraintRight_toLeftOf="@+id/vh_daily_detect_data_list_item_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="血压偏高"/>

    <TextView
        android:id="@+id/vh_daily_detect_data_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hui_575757"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vh_daily_detect_data_list_item_state"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2017-11-11"/>

</android.support.constraint.ConstraintLayout>
