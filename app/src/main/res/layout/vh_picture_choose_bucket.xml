<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/selector_white_bg">

    <ImageView
        android:id="@+id/vh_choose_picture_bucket_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/vh_choose_picture_bucket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="@color/hei_333333"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vh_choose_picture_bucket_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/vh_choose_picture_bucket_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vh_choose_picture_bucket_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/vh_choose_picture_bucket_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="9dp"
        android:src="@drawable/btn_list_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/vh_choose_picture_bucket_chosen_num"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_blue_circle_20"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/bai_ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vh_choose_picture_bucket_more"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hui_e0e0e0"
        app:layout_constraintTop_toBottomOf="@+id/vh_choose_picture_bucket_img"/>

</android.support.constraint.ConstraintLayout>
