<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ask_left_head_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        />

    <TextView
        android:id="@+id/ask_left_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ask_left_head_icon"
        android:background="@drawable/dialog_bg_left"
        android:text="@string/doctor_detail_service_content_report_parse_content"
        android:textColor="@color/hei_333333"
        android:textSize="14sp"
        />

</android.support.constraint.ConstraintLayout>