<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/ask_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hui_ababab"
            android:textSize="10sp"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/ask_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hei_333333"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ask_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_right"
            android:text="@string/doctor_detail_service_content_instruction_content"
            android:textColor="@color/hei_333333"
            android:textSize="14sp"
            />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ask_head_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/img_details_man"
            />
    </LinearLayout>

</LinearLayout>