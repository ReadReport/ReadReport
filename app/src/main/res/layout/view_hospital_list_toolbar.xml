<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <ImageView
        android:id="@+id/toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/selector_toolbar_back"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/toolbar_tab_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/report_hospital_tab_hospital"
            android:textColor="@color/hei_333333"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/toolbar_tab_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/toolbar_tab_line_0"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="@color/hei_333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar_tab_0"
            app:layout_constraintRight_toRightOf="@+id/toolbar_tab_0"/>

        <TextView
            android:id="@+id/toolbar_tab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/report_hospital_tab_unit"
            android:textColor="@color/hei_333333"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar_tab_0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/toolbar_tab_line_1"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="@color/hei_333333"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar_tab_1"
            app:layout_constraintRight_toRightOf="@+id/toolbar_tab_1"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>