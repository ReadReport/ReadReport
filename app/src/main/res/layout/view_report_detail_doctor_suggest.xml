<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/report_detail_suggestion_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/shape_white_corner"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    >

    <!--医生建议标题-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/report_detail_doctor_suggest_title"
        android:textColor="@color/hei_333333"
        android:textSize="17sp"
        />

    <!--医生信息-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <!--名字-->
        <TextView
            android:id="@+id/report_detail_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hei_333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <!--等级icon-->
        <ImageView
            android:id="@+id/report_detail_doctor_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/doctors_vip_icon"
            app:layout_constraintBottom_toBottomOf="@+id/report_detail_doctor_name"
            app:layout_constraintLeft_toRightOf="@+id/report_detail_doctor_name"
            app:layout_constraintTop_toTopOf="@+id/report_detail_doctor_name"
            />

        <!--等级-->
        <TextView
            android:id="@+id/report_detail_doctor_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/hui_858585"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/report_detail_doctor_name"
            app:layout_constraintLeft_toRightOf="@+id/report_detail_doctor_level_icon"
            app:layout_constraintTop_toTopOf="@+id/report_detail_doctor_name"
            />

        <!--日期icon-->
        <ImageView
            android:id="@+id/report_detail_doctor_suggestion_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date"
            android:layout_marginRight="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/report_detail_doctor_name"
            app:layout_constraintRight_toLeftOf="@+id/report_detail_doctor_suggestion_time"
            app:layout_constraintTop_toTopOf="@+id/report_detail_doctor_name"
            />
        <!--日期-->
        <TextView
            android:id="@+id/report_detail_doctor_suggestion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/hui_858585"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/report_detail_doctor_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_detail_doctor_name"
            />
    </android.support.constraint.ConstraintLayout>

    <!--旧版医生建议-->
    <LinearLayout
        android:id="@+id/report_detail_suggestion_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_detail_note_title"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/report_detail_note_head_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/img_details_man"
            />

        <TextView
            android:id="@+id/report_detail_suggestion_old_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_left"
            android:text="@string/doctor_detail_service_content_instruction_content"
            android:textColor="@color/hei_333333"
            android:textSize="14sp"
            />
    </LinearLayout>

    <!--新版医生建议-->
    <LinearLayout
        android:id="@+id/report_detail_suggestion_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >
        <!--指标说明title-->
        <com.wy.report.widget.view.CloseTitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:control_id="@+id/report_detail_quota_all_ll"
            app:show_title="@string/report_detail_doctor_quota_title"
            />

        <LinearLayout
            android:id="@+id/report_detail_quota_all_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--指标说明content-->
            <LinearLayout
                android:id="@+id/report_detail_quota_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <!--正常指标title-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/report_detail_doctor_quota_normal"
                    android:textColor="@color/hei_333333"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/report_detail_quota_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/doctor_detail_service_content_instruction_content"
                    android:textColor="@color/hei_575757"
                    android:textSize="14sp"
                    />

                <!--异常指标title-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/report_detail_doctor_quota_un_normal"
                    android:textColor="@color/hei_333333"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/report_detail_quota_un_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/doctor_detail_service_content_instruction_content"
                    android:textColor="@color/hei_575757"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <!--指标说明 私有界面-->
            <LinearLayout
                android:id="@+id/report_detail_quota_private_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_details_secrecy"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/report_detail_quota_private"
                    android:textColor="@color/hui_858585"
                    android:textSize="13sp"
                    />
            </LinearLayout>

        </LinearLayout>


        <!--健康建议title-->
        <com.wy.report.widget.view.CloseTitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:control_id="@+id/report_detail_suggestion_content_ll"
            app:show_title="@string/report_detail_doctor_health_suggestion_title"
            />
        <!--健康建议content-->
        <LinearLayout
            android:id="@+id/report_detail_suggestion_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--检查建议title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/report_detail_doctor_check_suggestion"
                android:textColor="@color/hei_333333"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/report_detail_doctor_check_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/doctor_detail_service_content_instruction_content"
                android:textColor="@color/hei_575757"
                android:textSize="14sp"
                />

            <!--饮食建议title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/report_detail_doctor_eat_suggestion"
                android:textColor="@color/hei_333333"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/report_detail_doctor_eat_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/doctor_detail_service_content_instruction_content"
                android:textColor="@color/hei_575757"
                android:textSize="14sp"
                />

            <!--运动建议title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/report_detail_doctor_sport_suggestion"
                android:textColor="@color/hei_333333"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/report_detail_doctor_sport_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/doctor_detail_service_content_instruction_content"
                android:textColor="@color/hei_575757"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>