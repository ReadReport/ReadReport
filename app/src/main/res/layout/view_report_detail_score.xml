<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:text="@string/report_detail_score_title"
        android:textColor="@color/hei_333333"
        android:textSize="17sp"
        />

    <!--健康得分-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >

        <com.wy.report.widget.view.ColorArcProgressBar
            android:id="@+id/report_detail_score_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:back_color="@color/lan_53b3f3"
            app:back_width="0.5dp"
            app:content_color="@color/lan_30acff"
            app:content_size="36sp"
            app:diameter="80dp"
            app:front_color1="@color/lan_53b3f3"
            app:front_color2="@color/lan_897cef"
            app:front_width="2dp"
            app:is_need_content="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:max_value="100"
            app:total_engle="360"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_detail_score_pb"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_detail_score_private_tip"
                android:textColor="@color/hui_858585"
                android:textSize="13sp"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_score_open"
                />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>