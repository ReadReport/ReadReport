<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    >

    <TextView
        android:id="@+id/report_detail_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/report_detail_user_note_title"
        android:textColor="@color/hei_333333"
        android:textSize="17sp"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/report_detail_note_head_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/report_detail_note_title"
        />

    <TextView
        android:id="@+id/report_detail_note_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_left"
        android:text="@string/doctor_detail_service_content_instruction_content"
        android:textColor="@color/hei_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/report_detail_note_head_icon"
        app:layout_constraintTop_toTopOf="@+id/report_detail_note_head_icon"
        />

</android.support.constraint.ConstraintLayout>