<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:id="@+id/report_detail_note_ll"
    android:visibility="gone"
    >

    <TextView
        android:id="@+id/report_detail_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/report_detail_user_note_title"
        android:textColor="@color/hei_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_detail_note_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/report_detail_note_head_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/img_details_man"
            />

        <TextView
            android:id="@+id/report_detail_note_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_left"
            android:textColor="@color/hei_333333"
            android:textSize="14sp"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>