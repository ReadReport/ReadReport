<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.constraint.Guideline
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="15dp"
        />
    <ImageView
        android:id="@+id/date_icon_img"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/list_date"
        app:layout_constraintTop_toTopOf="@+id/time_tv"
        app:layout_constraintBottom_toBottomOf="@+id/time_tv"
        app:layout_constraintLeft_toRightOf="parent"
        />
    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传时间：2017-06-21"
        android:textColor="@color/hui_858585"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintLeft_toRightOf="@+id/date_icon_img"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginRight="10dp"
        android:text="未提交"
        android:textColor="@color/hong_575757"
        android:textSize="12sp"
        />


</android.support.constraint.ConstraintLayout>