<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.wy.report.business.read.mode.ReportItemMode"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >

        <android.support.constraint.Guideline
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="15dp"
            />

        <android.support.constraint.Guideline
            android:id="@+id/left_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp"
            />

        <android.support.constraint.Guideline
            android:id="@+id/right_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp"
            />

        <ImageView
            android:id="@+id/date_icon_img"
            android:layout_width="13dp"
            android:layout_height="0dp"
            android:src="@drawable/list_date"
            app:layout_constraintBottom_toBottomOf="@+id/time_tv"
            app:layout_constraintLeft_toLeftOf="@+id/left_line"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/time_tv"
            />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="上传时间：2017-06-21"
            android:textColor="@color/hui_858585"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/date_icon_img"
            app:layout_constraintTop_toBottomOf="@+id/top_line"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="未提交"
            android:textColor="@color/hong_575757"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/time_tv"
            app:layout_constraintRight_toLeftOf="@+id/right_line"
            app:layout_constraintTop_toTopOf="@+id/time_tv"
            />

        <ImageView
            android:id="@+id/state_icon_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/list_notread"
            app:layout_constraintLeft_toLeftOf="@+id/left_line"
            app:layout_constraintTop_toBottomOf="@+id/time_tv"
            />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@{item.name}"
            android:textColor="@color/hei_333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/state_icon_img"
            app:layout_constraintTop_toTopOf="@+id/state_icon_img"
            />

        <TextView
            android:id="@+id/hospital_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@{item.hospital}"
            android:textColor="@color/hui_858585"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/state_icon_img"
            app:layout_constraintLeft_toRightOf="@+id/state_icon_img"
            />

        <Button
            android:id="@+id/submit_to_hospital_btn"
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_white_bg_corner"
            android:text="提交至医生"
            android:textColor="@color/lan_24aaff"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/hospital_tv"
            app:layout_constraintRight_toLeftOf="@+id/right_line"
            />

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请耐心等待"
            android:textColor="@color/hui_858585"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/hospital_tv"
            app:layout_constraintRight_toLeftOf="@+id/right_line"
            />
    </android.support.constraint.ConstraintLayout>
</layout>