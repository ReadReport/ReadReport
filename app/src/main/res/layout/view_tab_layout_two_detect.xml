<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/toolbar_tab_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/daily_detect_tendency_char"
        android:textColor="@color/lan_30acff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/toolbar_tab_1"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/toolbar_tab_line_0"
        android:layout_width="37dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/lan_30acff"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar_tab_0"
        app:layout_constraintRight_toRightOf="@+id/toolbar_tab_0"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tab_0"/>

    <TextView
        android:id="@+id/toolbar_tab_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:text="@string/daily_detect_data_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/toolbar_tab_0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/toolbar_tab_line_1"
        android:layout_width="37dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/lan_30acff"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar_tab_1"
        app:layout_constraintRight_toRightOf="@+id/toolbar_tab_1"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tab_1"/>

</merge>